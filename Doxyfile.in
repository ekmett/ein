# Minimal Doxyfile.in template

# Project-related settings
PROJECT_NAME           = @PROJECT_NAME@
PROJECT_NUMBER         = @PROJECT_VERSION@

# Where to find the source code to document
INPUT                  = @CMAKE_SOURCE_DIR@/src

# Directory where the documentation should be generated
OUTPUT_DIRECTORY       = @CMAKE_BINARY_DIR@/docs

# Format of generated documentation (HTML, PDF, etc.)
GENERATE_HTML          = YES
GENERATE_LATEX         = NO

# Additional documentation options
EXTRACT_ALL            = YES
RECURSIVE              = YES

# Optional: Treat undocumented members as warnings
WARN_IF_UNDOCUMENTED   = YES

# Optional: Set project version from CMake
PROJECT_NUMBER         = "@PROJECT_VERSION@"
