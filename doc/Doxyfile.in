PROJECT_NAME   = @PROJECT_NAME@
PROJECT_NUMBER = @PROJECT_VERSION@
PROJECT_BRIEF  = @PROJECT_BRIEF@
PROJECT_LOGO   = @CMAKE_SOURCE_DIR@/doc/assets/images/ein-logo.png
PROJECT_ICON   = @CMAKE_SOURCE_DIR@/doc/assets/icons/favicon.ico
IMAGE_PATH     = @CMAKE_SOURCE_DIR@/doc/assets
DOTFILE_DIRS   = @CMAKE_BINARY_DIR@/patched-dotfiles

# inputs
INPUT += @CMAKE_SOURCE_DIR@/LICENSE.md
INPUT += @CMAKE_SOURCE_DIR@/CODE_OF_CONDUCT.md
INPUT += @CMAKE_SOURCE_DIR@/CONTRIBUTING.md
INPUT += @CMAKE_SOURCE_DIR@/SECURITY.md
INPUT += @CMAKE_SOURCE_DIR@/src
INPUT += @CMAKE_SOURCE_DIR@/doc
INPUT += @CMAKE_BINARY_DIR@/h
INPUT += @CMAKE_SOURCE_DIR@/t

EXTENSION_MAPPING = cppm=C++
FILE_PATTERNS = *.h *.hpp *.c *.cpp *.cppm *.dox *.md *.x=cpp
FILTER_PATTERNS  = *.md=@CMAKE_SOURCE_DIR@/bin/gfm_preprocessor.sh
FILTER_PATTERNS += *.cppm=@CMAKE_SOURCE_DIR@/bin/elifdef.sh
FILTER_PATTERNS += *.cpp=@CMAKE_SOURCE_DIR@/bin/elifdef.sh
FILTER_PATTERNS += *.hpp=@CMAKE_SOURCE_DIR@/bin/elifdef.sh
STRIP_FROM_PATH = @CMAKE_BINARY_DIR@/ @CMAKE_SOURCE_DIR@/
OUTPUT_DIRECTORY = @CMAKE_BINARY_DIR@/doc
FULL_PATH_NAMES = NO

PREDEFINED = DOXYGEN=1
PREDEFINED += __cpp_modules=201907L
PREDEFINED += __AVX512F__=1
PREDEFINED += __AVX2__=1
PREDEFINED += ein_artificial="/** \qualifier \"[[artificial]]\" */"
PREDEFINED += ein_inline="/** \qualifier \"[[always_inline]]\" */"
PREDEFINED += ein_nodiscard="/** \qualifier \"[[nodiscard]]\" */"
PREDEFINED += ein_pure="/** \qualifier \"[[pure]]\" */"
PREDEFINED += ein_const="/** \qualifier \"[[const]]\" */"
PREDEFINED += ein_hidden="/** \qualifier \"[[hidden]]\" */"
PREDEFINED += ein_noescape="/** \qualifier \"[[noescape]]\" */"
PREDEFINED += ein_lifetimebound="/** \qualifier \"[[lifetimebound]]\" */"
PREDEFINED += ein_message(x)=
PREDEFINED += ein_restrict=restrict
PREDEFINED += ein_nonnull(x)="/** \qualifier \"[[nonnull(x)]]\" */"
PREDEFINED += ein_null_terminated_string_arg(x)=

QUIET = YES
RECURSIVE = NO

ENABLE_PREPROCESSING = YES
EXPAND_ONLY_PREDEF = YES
MACRO_EXPANSION = YES
SKIP_FUNCTION_MACROS = YES

EXTRACT_ALL = YES
EXTRACT_PRIVATE = YES
EXTRACT_STATIC = YES
EXTRACT_LOCAL_METHODS = YES
EXTRACT_LOCAL_CLASSES = YES
EXTRACT_ANON_NSPACES = NO

GENERATE_HTML = YES
GENERATE_LATEX = NO
GROUP_NESTED_COMPOUNDS = YES

WARN_IF_DOC_ERROR = YES
WARN_IF_UNDOCUMENTED = YES
#USE_MDFILE_AS_MAINPAGE = @CMAKE_SOURCE_DIR@/README.md
INTERNAL_DOCS = NO
AUTOLINK_SUPPORT = YES
DISTRIBUTE_GROUP_DOC = NO
INLINE_GROUPED_CLASSES = YES
CASE_SENSE_NAMES = YES

GENERATE_TODOLIST      = YES
GENERATE_TREEVIEW      = YES
DISABLE_INDEX          = NO
FULL_SIDEBAR           = NO
HTML_COLORSTYLE        = LIGHT
